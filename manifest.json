{
  "manifest_version": 3,
  "name": "Random Password Generator",
  "version": "1.0",
  "description": "Generate random passwords with customizable options.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "clipboardWrite"
  ]
}
